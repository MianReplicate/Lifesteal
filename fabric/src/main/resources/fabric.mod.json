{
  "schemaVersion": 1,
  "id": "lifesteal",
  "version": "${mod_version}",

  "custom": {
    "cardinal-components": [
      "lifesteal:leveldata",
      "lifesteal:healthdata"
    ]
  },
  "icon": "${logo_file}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "LoxiGoose",
    "bredtxt",
    "iZophoro"
  ],
  "contact": {
    "repo": "${repository_url}",
    "issues": "${issue_tracker_url}"
  },
  "license": "${license}",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.goose.lifesteal.fabric.LifestealFabric"
    ],
    "client": [
      "net.goose.lifesteal.fabric.LifestealFabricClient"
    ],
    "cardinal-components": [
      "net.goose.lifesteal.data.fabric.ModComponents"
    ]
  },
  "mixins": [
    "lifesteal.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": ">=${minecraft_version}"
  }
}
